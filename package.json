{
  "name": "playwright-api-testing",
  "version": "1.0.0",
  "scripts": {
    "test": "npx playwright test",
    "test:env": "cross-env NODE_ENV=test npx playwright test",
    "report": "npx playwright show-report --port=9330",
    "report:html": "npx playwright show-report",
    "report:allure:generate": "npx allure generate allure-results --clean -o allure-report",
    "report:allure:open": "npm run report:allure:generate && npx allure open allure-report"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "allure-commandline": "^2.34.1",
    "allure-js-commons": "^3.3.2",
    "allure-playwright": "^3.3.3",
    "cross-env": "^7.0.3",
    "dotenv": "^16.6.1",
    "module-alias": "^2.2.3"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1"
  },
  "_moduleAliases": {
    "@api": "src/api",
    "@utils": "src/utils",
    "@schemas": "schemas",
    "@data": "data",
    "@tests": "tests"
  }
}
